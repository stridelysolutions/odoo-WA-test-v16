<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="account_move_form_view_inherited">
        <field name="name">account.move.form.view.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_invoice_sent']" position="after">
                <field name="whats_app" invisible = "1"/>
                <button type="object" class="oe_stat_button"
                        name="action_send_whatsapp" 
                        icon="fa-whatsapp" 
                        string="Send by Whatsapp" 
                        attrs="{'invisible':[('whats_app', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
